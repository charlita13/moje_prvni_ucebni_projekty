# --------------------------------------------
# aktuální stav: dostanu se na stránku "hráči 
# --------------------------------------------

import requests
from selenium import webdriver
import time
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.common.by import By

# zadání jména a hesla
# username = input("Vložte své uživatelské jméno: ")
# password = input("Vložte své heslo: ")
username = "charlo13"
password = "572859"

# načtení stránky
driver = webdriver.Chrome()
driver.maximize_window()
driver.get("https://www.hattrick.org/cs/")

# akceptace cookies
WebDriverWait(driver, 10).until(
    EC.element_to_be_clickable((By.CLASS_NAME, "cky-btn-accept"))
).click()

# zobrazení přihlašovacího formuláře
driver.find_element(By.XPATH, "//a[contains(text(),'Už máš účet?')]").click()
time.sleep(2)

# vyplnění uživ.jména a hesla a login
WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.NAME, "ctl00$CPContent$ucLogin$txtUserName"))    # username
).send_keys(username)

driver.find_element(By.NAME, "ctl00$CPContent$ucLogin$txtPassword").send_keys(password)     # heslo
driver.find_element(By.NAME, "ctl00$CPContent$ucLogin$butLogin").click()    # login button
time.sleep(2)

# prokliknutí se na požadovanou kartu
driver.find_element(By.ID, "playersLink").click()    # login button
time.sleep(2)

# zavření prohlížeče
driver.quit()
